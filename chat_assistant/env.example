# Medical Quiz Assistant Environment Configuration
# Copy this file to .env and modify as needed

# Application
APP_NAME="Medical Quiz Assistant"
APP_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# CORS Configuration
CORS_ORIGINS=["*"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Session Management
SESSION_TIMEOUT_HOURS=24
MAX_SESSIONS=1000

# Session Management (Redis)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL=86400

# Vector Database (ChromaDB)
CHROMA_HOST=chroma
CHROMA_PORT=8000
CHROMA_PERSIST_DIR=./chroma_db
CHROMA_COLLECTION_QUESTIONS=questions
CHROMA_COLLECTION_EXPLANATIONS=explanations

# Embeddings
EMBEDDING_MODEL=bge-small-en
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32
EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Dataset Configuration
MEDMCQA_DATASET=openlifescienceai/medmcqa

# RAG Configuration
RAG_ENABLED=true
RAG_TOP_K=5
RAG_CONFIDENCE_THRESHOLD=0.7
RAG_MAX_TOKENS=1000

# Reranker Configuration
RERANKER_ENABLED=false

# LLM Configuration (Ollama) - D11 compliance
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
LLM_MODEL=llama3.2:1b
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=512

# Data Processing
DATA_BATCH_SIZE=100
DATA_MAX_QUESTIONS=
DATA_VALIDATION_SPLIT=0.1

# Monitoring & Observability
ENABLE_METRICS=true
ENABLE_TRACING=false
METRICS_PORT=9090

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_EXPIRE_HOURS=24

# Performance
CACHE_SIZE=1000
CACHE_TTL_SECONDS=3600
MAX_CONCURRENT_REQUESTS=100

# Evaluation
EVAL_GOLDEN_SET_SIZE=100
EVAL_RECALL_THRESHOLD=0.8
EVAL_MRR_THRESHOLD=0.7

# Environment
ENVIRONMENT=development
